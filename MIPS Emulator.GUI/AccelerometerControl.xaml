<Window x:Class="MIPS_Emulator.GUI.AccelerometerControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MIPS_Emulator.GUI"
        mc:Ignorable="d"
        Title="Accelerometer" Height="150" Width="640">
    <StackPanel>
        <DockPanel>
            <Label>X: </Label>
            <Slider Name="XSlider" Minimum="-100" Maximum="100" ValueChanged="Slider_ValueChanged" />
        </DockPanel>
        <DockPanel>
            <Label>Y: </Label>
            <Slider Name="YSlider" Minimum="-100" Maximum="100" ValueChanged="Slider_ValueChanged" />
        </DockPanel>
    </StackPanel>
</Window>
